<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:fillViewport="true">
    <LinearLayout
        android:background="#faf9f5"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:layout_margin="20dp">
        <ImageView
            android:id="@+id/detail_request_image"
            android:layout_width="match_parent"
            android:layout_height="200dp"
            android:paddingTop="2dp" />
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            >
            <TextView
                android:id="@+id/Detail_newsrequest_UserId_labal"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="10dp"
                android:textColor="	#663366"
                android:text="User ID: "/>
            <TextView
                android:id="@+id/Detail_newsrequest_UserId"
                android:layout_width="wrap_content"
                android:textAlignment="center"
                android:layout_height="wrap_content"
                android:layout_alignParentStart="true"
                android:layout_alignParentTop="true"
                android:singleLine="true"
                android:textColor="@color/colorDark"
                android:ellipsize="marquee"
                android:textSize="15sp"
                android:textStyle="bold" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="20dp"
                android:layout_marginLeft="10dp"
                android:text="User Department: "
                android:textColor="	#663366" />
            <TextView
                android:id="@+id/Detail_newsrequest_UserDepartment"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentStart="true"
                android:layout_alignParentTop="true"
                android:textAlignment="center"
                android:singleLine="true"
                android:textColor="@color/colorDark"
                android:ellipsize="marquee"
                android:textSize="15sp"
                android:textStyle="bold" />
        </LinearLayout>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="10dp"
                android:textColor="	#663366"
                android:text="News Category: "/>
            <TextView
                android:id="@+id/all_news_request_category"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentStart="true"
                android:layout_alignParentTop="true"
                android:singleLine="true"
                android:textColor="@color/colorDark"
                android:ellipsize="marquee"
                android:textSize="15sp"
                android:textStyle="bold" />
        </LinearLayout>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="10dp"
                android:textColor="	#663366"
                android:layout_gravity="center"
                android:text="News Title: "/>
            <TextView
                android:id="@+id/detail_request_heading"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_alignParentStart="true"
                android:layout_alignParentTop="true"
                android:textColor="@color/colorDark"
                android:textSize="15sp" />
        </LinearLayout>


        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:layout_marginLeft="10dp"
                android:text="News Description: "
                android:textColor="	#663366" />

            <TextView
                android:id="@+id/detail_request_desc"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_alignParentStart="true"
                android:layout_alignParentTop="true"

                android:textColor="#030303"
                android:textSize="15sp" />
        </LinearLayout>
<LinearLayout
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical">
        <Button
            android:layout_centerHorizontal="true"
            android:layout_below="@+id/detail_request_desc"
            android:id="@+id/approve_news"
            android:background="@drawable/button_color"
            android:textColor="#FFFFFF"
            android:text="Approve"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"/>
        <Button
            android:layout_centerHorizontal="true"
            android:layout_below="@+id/approve_news"
            android:id="@+id/discard"
            android:background="@drawable/button_color"
            android:textColor="#FFFFFF"
            android:text="Discard"
            android:layout_marginTop="10dp"
            android:layout_marginBottom="30dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"/>
</LinearLayout>
    </LinearLayout>



</ScrollView>
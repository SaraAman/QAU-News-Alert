    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="5dp"
        android:id="@+id/viewpager"
        android:layout_below="@+id/cati_button">

        <androidx.viewpager.widget.ViewPager
            android:id="@+id/adminslider"
            android:layout_width="match_parent"
            android:layout_height="150dp"
            android:layout_alignParentTop="true"
            android:layout_alignParentEnd="true"
            android:layout_marginTop="2dp"
            android:layout_marginEnd="5dp" />
    </RelativeLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="30dp"
        android:layout_below="@+id/viewpager"
        android:layout_alignParentEnd="true"
        android:layout_gravity="center"
        android:orientation="horizontal"
        android:id="@+id/recent">

        <TextView

            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"
            android:layout_marginLeft="10dp"
            android:text="@string/Recent"
            android:textColor="@color/colorDark"
            android:textSize="15sp"
            android:textStyle="bold" />
        <TextView

            android:id="@+id/view_all_news"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"
            android:layout_marginLeft="200dp"
            android:text="@string/viewall"
            android:textColor="@color/colorDark"
            android:textSize="15sp"
            android:textStyle="bold" />

    </LinearLayout>
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/recent">
        <androidx.recyclerview.widget.RecyclerView
            android:id="@+id/grid_recycle"
            android:layout_width="match_parent"
            android:layout_height="1010dp"
            android:layout_alignParentEnd="true"
            android:layout_alignParentBottom="true"
            android:layout_marginEnd="0dp"
            android:layout_marginBottom="5dp"
            android:paddingTop="4dp"
            android:scrollbars="vertical" />


        <com.google.android.material.floatingactionbutton.FloatingActionButton
            android:id="@+id/adminaddnews"
            android:layout_width="wrap_content"
            android:layout_height="60dp"
            android:layout_gravity="bottom|end"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintRight_toRightOf="parent"
            android:layout_margin="@dimen/fab_margin"
            app:srcCompat="@drawable/ic_add_black_24dp"
            android:layout_alignParentBottom="true"
            android:layout_alignParentEnd="true"
            app:backgroundTint="#005680" />
    </RelativeLayout>

</RelativeLayout>